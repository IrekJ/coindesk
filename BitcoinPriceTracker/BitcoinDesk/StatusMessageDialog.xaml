<Window x:Class="BitcoinDesk.StatusMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status Message" Height="150" Width="400"
        WindowStartupLocation="CenterOwner" WindowStyle="None" 
        ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Margin="20"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Margin="0,0,0,20" Click="OnOkButtonClick"/>
    </Grid>
</Window>
